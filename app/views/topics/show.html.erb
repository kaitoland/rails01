<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @topic.title %>
</p>
<br>
<p>
  <strong>レスポンス</strong>
</p>
<br>

<% if @responses != nil %>
<p>
  レスはあります
  <% @responses.each_with_index do |response , idx| %>
    <p>
      <%= idx + 1 %>. <%= response.name %> : <%= response.body %>
    </p>
  <% end %>
</p>
<% else %>
<p>レスが存在しません。</p>
<% end %>

<h3>新規書き込み</h3>
<%= form_for @newResponse, :url => response_create_path do |f| %>
  <p>お名前</p>
  <p><%= f.text_field :name %></p>
  <p>本文</p>
  <p><%= f.text_area :body %></p>
  <%= f.hidden_field :topic_id %>
  <%= f.submit %>
<% end %>

<%= link_to 'Edit', edit_topic_path(@topic) %> |
<%= link_to 'Back', topics_path %>
<%= link_to 'Home', root_path %>
